{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ArchStore",
  "version": "0.1.0",
  "identifier": "com.archstore.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "2024 ArchStore",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "longDescription": "A modern, feature-rich package manager GUI for Arch Linux supporting AUR, Flatpak, and official repositories",
    "shortDescription": "Arch Linux Package Manager GUI",
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "ArchStore - Package Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "/usr/share/pixmaps/**",
          "/usr/share/icons/**",
          "$HOME/.local/share/icons/**"
        ]
      }
    }
  }
}
